{
  "name": "intro-to-mocha",
  "version": "0.0.0",
  "private": true,
  "license": "Apache-2.0",
  "devDependencies": {
    "grunt": "^1.0.3",
    "grunt-contrib-connect": "^1.0.2",
    "grunt-contrib-watch": "^1.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "load-grunt-tasks": "^3.5.2",
    "semistandard": "^12.0.0",
    "snazzy": "^7.0.0",
    "yo": "^2.0.5"
  },
  "engines": {
    "node": ">=4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/boneskull/intro-to-mocha.git"
  },
  "scripts": {
    "test": "semistandard --verbose | snazzy",
    "new-slide": "yo reveal:slide --markdown=true",
    "precommit": "lint-staged && grunt buildIndex && git add index.html",
    "start": "grunt"
  },
  "lint-staged": {
    "*.js": [
      "semistandard --verbose --fix | snazzy",
      "git add"
    ]
  },
  "dependencies": {
    "reveal.js": "^3.6.0"
  }
}
